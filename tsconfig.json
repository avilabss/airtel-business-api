{
    "compilerOptions": {
        "target": "ESNext",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "lib": ["esnext", "dom"],
        "outDir": "lib",
        "rootDir": "src",
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "removeComments": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
